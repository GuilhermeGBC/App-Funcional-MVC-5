@model IEnumerable<AppMvc5.Models.Aluno>

@{
    ViewBag.Title = "Gestão de Alunos";
}

@if(TempData["Mensagem"] != null) 
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
      <h3>@TempData["Mensagem"].ToString()</h3>
    </div>
}

<h2>Gestão de Alunos</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<a href="@Url.Action("Create")" class="btn btn-primary">Novo Aluno</a><br  /><br />

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            <a href="@Url.Action("Edit", controllerName:"Alunos", routeValues: new {id = item.Id })" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Details", controllerName:"Alunos", routeValues: new {id = item.Id })" class="btn btn-primary">Detalhes</a>
            <a href="@Url.Action("Delete", controllerName:"Alunos", routeValues: new {id = item.Id })" class="btn btn-danger">Excluir</a>

            @*Action, Alunos *@

